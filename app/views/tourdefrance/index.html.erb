<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<title>Tour de France live opdateringer til mobiltelefoner</title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
		<meta name="viewport" content="width=320,initial-scale=1,user-scalable=no" />
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
		<script type="text/javascript">
			jQuery.fn.reverse = function() {
				return this.pushStack(this.get().reverse(), arguments);
			};
			
			jQuery.fn.exists = function(){return jQuery(this).length>0;}

			$(document).ready(function() {
				refreshUpdates(true);
			});
			
			function refreshUpdates(initialUpdate) {
				$.getJSON("/livetour.json",
					function(data, textStatus) {
						if (textStatus == "success") {
							updates = data.updates.reverse();
							$.each(updates, function(i, item) {
								li_id = item.time.replace(/ /g, '_').replace(/;/g, '_').replace(/:/g, '_').replace(/-/g, '_');
								
								if (!$("#" + li_id).exists()) {
									new_li = $("<li />").attr('id', li_id).html("<div><b>" + item.title + "</b> <span>(" + item.time + ")</span></div>" + item.text);
									if (!initialUpdate) { new_li.css('display', 'none'); }
									new_li.prependTo("#updates");
									if (!initialUpdate) { new_li.slideDown('slow'); }
								}
							});
						}
		      });
				
				window.setTimeout('refreshUpdates(false)', 30000);
			}
		
		</script>
		<style type="text/css">
			ul { margin-left: 0; padding-left: 0; }
			li { margin-left :0; padding-left: 0; margin-bottom: 20px; }
			span { color: #666; font-size: 80%; }
		</style>
	</head>
	<body>
		<ul id="updates"></ul>
	</body>
</html>